<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_m"
    app:cardCornerRadius="@dimen/card_radius_large"
    app:cardElevation="@dimen/card_elevation"
    android:foreground="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_m">

        <!-- Imagen de la receta -->
        <ImageView
            android:id="@+id/communityImage"
            android:layout_width="@dimen/recipe_image_size"
            android:layout_height="@dimen/recipe_image_size"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:contentDescription="@string/community_recipe_image"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true" />

        <!-- Contenedor de texto a la derecha de la imagen -->
        <LinearLayout
            android:id="@+id/communityContentContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toEndOf="@id/communityImage"
            android:layout_toRightOf="@id/communityImage"
            android:layout_alignTop="@id/communityImage"
            android:layout_alignBottom="@id/communityImage"
            android:layout_marginStart="@dimen/margin_m"
            android:layout_marginLeft="@dimen/margin_m"
            android:layout_marginEnd="@dimen/margin_m"
            android:layout_marginRight="@dimen/margin_m">

            <!-- Título -->
            <TextView
                android:id="@+id/communityTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- Autor -->
            <TextView
                android:id="@+id/communityAuthor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                android:textColor="?android:textColorSecondary"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="@dimen/margin_xs" />

            <!-- Descripcion -->
            <TextView
                android:id="@+id/communityDescription"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/margin_xs"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                android:maxLines="3"
                android:ellipsize="end" />

            <!-- Fila inferior: tiempo + etiqueta + favorito -->
            <LinearLayout
                android:id="@+id/communityMetaRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin_xs"
                android:gravity="center_vertical">

                <!-- Tiempo -->
                <TextView
                    android:id="@+id/communityTime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                    android:textColor="?android:textColorSecondary"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <!-- Etiqueta Comunidad -->
                <TextView
                    android:id="@+id/communityTag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_s"
                    android:paddingLeft="@dimen/padding_xs"
                    android:paddingRight="@dimen/padding_xs"
                    android:paddingTop="@dimen/padding_xs"
                    android:paddingBottom="@dimen/padding_xs"
                    android:text="@string/community_badge"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                    android:background="@drawable/bg_community_badge" />

                <!-- Botón favoritos -->
                <ImageView
                    android:id="@+id/btnFavFromCommunity"
                    android:layout_width="@dimen/icon_size"
                    android:layout_height="@dimen/icon_size"
                    android:padding="@dimen/padding_xs"
                    android:src="@android:drawable/btn_star_big_off"
                    android:contentDescription="@string/add_to_favorites"
                    android:background="?attr/selectableItemBackgroundBorderless" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>